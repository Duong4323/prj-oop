<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.vehicle.VehicleDetailsController" prefWidth="500.0" prefHeight="400.0">
    <VBox spacing="15.0" alignment="TOP_CENTER" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <!-- Title -->
        <Label text="Vehicle Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <!-- Vehicle Information -->
        <GridPane hgap="10.0" vgap="10.0" alignment="CENTER_LEFT">
            <Label text="License Plate:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="licensePlateLabel" text="N/A" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Brand:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="brandLabel" text="N/A" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Model:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="modelLabel" text="N/A" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Year:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="yearLabel" text="N/A" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

        <!-- Trips Title -->
        <Label text="Trip History" style="-fx-font-size: 16px; -fx-font-weight: bold;" VBox.vgrow="NEVER"/>

        <!-- Trips Table -->
        <TableView fx:id="tripTableView" prefHeight="200.0" prefWidth="460.0">
            <columns>
                <TableColumn fx:id="tripIdColumn" text="Trip ID" prefWidth="100.0"/>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="120.0"/>
                <TableColumn fx:id="distanceColumn" text="Distance (km)" prefWidth="120.0"/>
                <TableColumn fx:id="avgSpeedColumn" text="Avg Speed (km/h)" prefWidth="100.0"/> <!-- Thêm cột mới -->
            </columns>
            <placeholder>
                <Label text="No trips available for this vehicle."/>
            </placeholder>
        </TableView>

        <!-- Close Button -->
        <HBox spacing="10" alignment="CENTER">
            <Button text="Close" onAction="#handleClose"/>
        </HBox>
    </VBox>
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>
</AnchorPane>