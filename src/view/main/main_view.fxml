<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.MainController" prefWidth="1200" prefHeight="600">

    <!-- Sidebar -->
    <VBox fx:id="sideBar" prefWidth="200" spacing="20"
          AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0"
          style="-fx-background-color: #1e2a38; -fx-padding: 20;">
        <Label fx:id="welcomeLabel" text="Welcome, Admin"
               style="-fx-text-fill: white; -fx-font-size: 16px;" />
        <Button fx:id="btnHome" text="🏠 Home" onAction="#handleHome"
                style="-fx-background-color: transparent; -fx-text-fill: white;" />
        <Button fx:id="btnVehicle" text="🚗 Quản lý phương tiện" onAction="#goToVehicleManager"
                style="-fx-background-color: transparent; -fx-text-fill: white;" />
        <Button fx:id="btnJourney" text="🧭 Quản lý hành trình" onAction="#goToJourneyManager"
                style="-fx-background-color: transparent; -fx-text-fill: white;" />
        <Region fx:id="spacer" VBox.vgrow="ALWAYS"/>
        <Button fx:id="btnLogout" text="Logout" onAction="#handleLogout"
                style="-fx-background-color: red; -fx-text-fill: white;" />
    </VBox>

    <!-- Main content -->
    <StackPane fx:id="mainContentPane"
               AnchorPane.topAnchor="0" AnchorPane.leftAnchor="200" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"
               style="-fx-background-color: #f4f4f4;">
        <!-- Nội dung Home mặc định -->
        <VBox fx:id="homeContent" alignment="CENTER" spacing="20" visible="true">
            <Label text="Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <HBox spacing="20" alignment="CENTER">
                <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #ccc; -fx-border-radius: 5;">
                    <Label text="Tổng số phương tiện" style="-fx-font-size: 16px;" />
                    <Label fx:id="totalVehicles" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                </VBox>
                <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #ccc; -fx-border-radius: 5;">
                    <Label text="Tổng số hành trình" style="-fx-font-size: 16px;" />
                    <Label fx:id="totalJourneys" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                </VBox>
            </HBox>
        </VBox>
    </StackPane>

</AnchorPane>