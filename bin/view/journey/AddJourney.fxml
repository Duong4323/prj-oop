<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.journey.AddJourneyController" prefWidth="400" prefHeight="500">
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <Label text="Add New Journey" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            
            <!-- Phần nhập tay -->
            <ComboBox fx:id="vehicleComboBox" promptText="Select Vehicle" />
            <TextField fx:id="totalTimeField" promptText="Total Time (hours)" />
            <TextField fx:id="distanceField" promptText="Distance (km)" />
            <TextField fx:id="measurementCountField" promptText="Number of Measurements" />
            
            <!-- Phần nhập liệu cho các lần đo -->
            <VBox fx:id="measurementsVBox" spacing="5" />
            
            <!-- Nút lưu và hủy -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="saveButton" text="Save" onAction="#handleSave" />
                <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>