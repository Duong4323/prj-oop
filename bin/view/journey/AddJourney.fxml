<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.journey.AddJourneyController" prefWidth="900" prefHeight="500">
    <children>
        <VBox spacing="20" layoutX="20" layoutY="20" prefWidth="860">
            <children>
                <Label text="Add New Journey" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <GridPane hgap="15" vgap="15" alignment="TOP_LEFT">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="120" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="220" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="50" prefWidth="60" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="90" prefWidth="100" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="50" prefWidth="60" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="90" prefWidth="100" />
                    </columnConstraints>

                    <Label text="Vehicle:" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="100"/>
                    <ComboBox fx:id="vehicleComboBox" promptText="Select Vehicle" prefWidth="220" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="5"/>

                    <Label text="Start:" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="100"/>
                    <DatePicker fx:id="startDatePicker" promptText="Start Date" prefWidth="220" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    <Label text="Hour:" GridPane.rowIndex="1" GridPane.columnIndex="2" prefWidth="60"/>
                    <Spinner fx:id="startHourSpinner" editable="true" prefWidth="100" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                    <Label text="Minute:" GridPane.rowIndex="1" GridPane.columnIndex="4" prefWidth="60"/>
                    <Spinner fx:id="startMinuteSpinner" editable="true" prefWidth="100" GridPane.rowIndex="1" GridPane.columnIndex="5"/>

                    <Label text="End:" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="100"/>
                    <DatePicker fx:id="endDatePicker" promptText="End Date" prefWidth="220" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    <Label text="Hour:" GridPane.rowIndex="2" GridPane.columnIndex="2" prefWidth="60"/>
                    <Spinner fx:id="endHourSpinner" editable="true" prefWidth="100" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
                    <Label text="Minute:" GridPane.rowIndex="2" GridPane.columnIndex="4" prefWidth="60"/>
                    <Spinner fx:id="endMinuteSpinner" editable="true" prefWidth="100" GridPane.rowIndex="2" GridPane.columnIndex="5"/>

                    <Label text="Distance (km):" GridPane.rowIndex="3" GridPane.columnIndex="0" prefWidth="100"/>
                    <TextField fx:id="distanceField" promptText="Distance (km)" prefWidth="220" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.columnSpan="5"/>

                    <Label text="Sensor Date:" GridPane.rowIndex="4" GridPane.columnIndex="0" prefWidth="100"/>
                    <DatePicker fx:id="sensorDatePicker" promptText="Sensor Date" prefWidth="220" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    <Label text="Hour:" GridPane.rowIndex="4" GridPane.columnIndex="2" prefWidth="60"/>
                    <Spinner fx:id="sensorHourSpinner" editable="true" prefWidth="100" GridPane.rowIndex="4" GridPane.columnIndex="3"/>
                    <Label text="Minute:" GridPane.rowIndex="4" GridPane.columnIndex="4" prefWidth="60"/>
                    <Spinner fx:id="sensorMinuteSpinner" editable="true" prefWidth="100" GridPane.rowIndex="4" GridPane.columnIndex="5"/>

                    <Label text="Speed (km/h):" GridPane.rowIndex="5" GridPane.columnIndex="0" prefWidth="100"/>
                    <TextField fx:id="sensorSpeedField" promptText="Speed" prefWidth="220" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                    <Label text="Fuel (L):" GridPane.rowIndex="5" GridPane.columnIndex="2" prefWidth="60"/>
                    <TextField fx:id="sensorFuelField" promptText="Fuel" prefWidth="220" GridPane.rowIndex="5" GridPane.columnIndex="3" GridPane.columnSpan="3"/>

                    <Label text="RPM:" GridPane.rowIndex="6" GridPane.columnIndex="0" prefWidth="100"/>
                    <TextField fx:id="sensorRpmField" promptText="RPM" prefWidth="220" GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.columnSpan="5"/>
                </GridPane>

                <HBox spacing="10" alignment="CENTER">
                    <Button text="Add Journey" onAction="#handleAddJourney" style="-fx-font-size: 14px;"/>
                    <Button text="Cancel" onAction="#closeAddJourney" style="-fx-font-size: 14px;"/>
                </HBox>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>